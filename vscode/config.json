{
    // 已经安装的插件：Vim, AgeutoFileName, Better Align
    // C/C++, Project Manager
    // Default usering settings
    "editor.fontSize": 16,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "all",
    "editor.rulers": [100],
    "editor.renderIndentGuides": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.mak":true,
        "**/.bin":true,
        "**/.~":true
    },
    "search.smartCase": true,
    "[c]":  {
        "editor.autoIndent": true
      },
    
    // 针对 [cpp] 语言，配置替代编辑器设置。
    "[cpp]":  {
        "editor.autoIndent": true
    },
    // 针对 [makefile] 语言，配置替代编辑器设置。
    "[makefile]":  {
        "editor.insertSpaces": false
    },

    "vim.leader": ",",
    "vim.cmdLineInitialColon":true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.cursorStylePerMode" : {
        "normal": "block",
        "insert": "line-thin",
        "replace": "block-outline"
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<Space>"],
            "after": [":"],
        },
        {
            "before":["<C-n>"],
            "after":[],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        }
    ],
    "vim.handleKeys":{
        "<C-a>": false,
        "<C-f>": false
    },
    "vim.overrideCopy": false,
}